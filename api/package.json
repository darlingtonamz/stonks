{
  "name": "stonk_api",
  "version": "1.0.0",
  "description": "This is the API portion of The Stonks Project.",
  "main": "index.js",
  "author": "Amanze Ogbonna",
  "license": "MIT",
  "scripts": {
    "prebuild": "yarn install; rimraf dist",
    "start:dev": "nodemon dist/index.js",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "start-": "nodemon dist/index.js",
    "start": "yarn run migration:run; ts-node-dev --respawn src/index.ts",
    "build": "tsc --project ./",
    "migration:run": "yarn run prebuild; yarn run build; ./node_modules/typeorm/cli.js migration:run",
    "migration:reset": "yarn run build; ./node_modules/typeorm/cli.js migration:reset",
    "migration:generate": "yarn run prebuild; yarn run build; ./node_modules/typeorm/cli.js migration:generate",
    "test": "TESTING=true node --max-old-space-size=4096 ./node_modules/.bin/jest --runInBand --logHeapUsage --forceExit",
    "test:e2e": "TESTING=true jest --runInBand --forceExit --logHeapUsage --config=jest.e2e.config.js --no-cache",
    "test:unit": "TESTING=true jest --runInBand --forceExit --logHeapUsage --config=jest.unit.config.js"
  },
  "dependencies": {
    "@types/jest": "^26.0.23",
    "@types/shortid": "^0.0.29",
    "ajv": "7.x",
    "ajv-errors": "^3.0.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "connect-redis": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.21.3",
    "fastify": "^3.15.1",
    "fastify-decorators": "^3.9.1",
    "jest": "^26.6.3",
    "jest-environment-node": "^26.6.2",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.16",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/faker": "^5.5.5",
    "@types/node": "^15.0.2",
    "@types/validator": "^13.1.3",
    "argon2": "^0.27.1",
    "concurrently": "^6.0.0",
    "faker": "^5.5.3",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.2"
  }
}
