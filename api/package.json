{
  "name": "stonk_api",
  "version": "1.0.0",
  "description": "This is the API portion of The Stonks Project.",
  "main": "index.js",
  "author": "Amanze Ogbonna",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "start:dev": "nodemon dist/index.js",
    "build:dev": "tsc --watch --preserveWatchOutput",
    "start-": "nodemon dist/index.js",
    "start": "yarn run migration:run; ts-node-dev --respawn src/index.ts",
    "build": "tsc --project ./",
    "migration:run": "yarn run prebuild; yarn run build; ./node_modules/typeorm/cli.js migration:run",
    "migration:reset": "yarn run build; ./node_modules/typeorm/cli.js migration:reset",
    "migration:generate": "yarn run prebuild; yarn run build; ./node_modules/typeorm/cli.js migration:generate"
  },
  "dependencies": {
    "@types/shortid": "^0.0.29",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "connect-redis": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "fastify": "^3.15.1",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "shortid": "^2.2.16",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/node": "^15.0.2",
    "@types/validator": "^13.1.3",
    "argon2": "^0.27.1",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.2"
  }
}
